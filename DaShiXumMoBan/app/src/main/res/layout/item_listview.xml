<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/item_logo"
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x90" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/item_pinpai"
            android:textSize="@dimen/x25"
            android:gravity="center"
            android:text="品牌"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x40" />
        <TextView
            android:id="@+id/name1"
            android:textSize="@dimen/x29"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="@drawable/item_piao"
            android:textSize="@dimen/x23"
            android:gravity="center"
            android:text="票"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RatingBar
        android:rating="3"
            android:numStars="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/x15"
            android:gravity="center"
            android:textColor="#e2df21"
            android:text="2.8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginLeft="@dimen/x15"
            android:gravity="center"
            android:text="月售243单"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="$0元起送/配送费$9元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
            <TextView
                android:text="556米/33分钟"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="#cac3c3"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/item_pinpai"
                android:text="减"
                android:textSize="@dimen/x25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="在线支付满49元减10元，满89元减16元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/item_pinpai"
                android:text="增"
                android:textSize="@dimen/x25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="在线支付满45元赠九珍果汁饮料"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>