<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fu"
    tools:context="com.jiyun.qcloud.dashixummoban.ui.home.activity.fragment.XiangQingFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/left_listview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:scrollbars="none"
        android:divider="@null"></ListView>

    <com.jiyun.qcloud.dashixummoban.myview.PinnedHeaderListView
        android:id="@+id/pinnedListView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
    android:background="@android:color/white">
    </com.jiyun.qcloud.dashixummoban.myview.PinnedHeaderListView>



</LinearLayout>

    <ImageView
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="70dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/main_img"
        android:background="@mipmap/ic_shopping_cart_grey_700_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/num"
        android:textColor="#fff"
        android:background="@drawable/button3"
        android:layout_alignTop="@+id/main_img"
        android:layout_toRightOf="@+id/main_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
