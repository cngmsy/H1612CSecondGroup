<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_clear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="#4c88e8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30">
        <ImageView
            android:id="@+id/image_clear_back"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/go_back"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30" />
        <TextView
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center_vertical"
            android:text="结算中心"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30" />
    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/recycle_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </com.jcodecraeer.xrecyclerview.XRecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25">

        <TextView
            android:textColor="#fff"
            android:background="#7e7b7b"
            android:paddingLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:text="待支付￥："
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/tv_clear_money"
            android:textColor="#fff"
            android:background="#7e7b7b"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:textColor="#fff"
            android:background="#8def88"
            android:id="@+id/tv_clear_submit"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:text="提交订单"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
